<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="35dp">

    <ImageView
        android:id="@+id/switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#882255aa"
        android:contentDescription="@string/enlargeimage" />

    <Gallery
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#882255FF"
        android:gravity="center_vertical"
        android:spacing="16dp" />

    <TextView
        android:textColor="#FFFFFFFF"
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switcher"
        android:layout_centerHorizontal="true"
        android:background="#aa2222FF"
        android:gravity="center_horizontal"
        android:text="@string/not_tagged"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView1"
        android:enabled="false"
        android:text="@string/tag" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button1"
        android:contentDescription="@string/rotate"
        android:src="@android:drawable/ic_menu_rotate" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageButton3"
        android:contentDescription="@string/call"
        android:src="@android:drawable/sym_action_call"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton1"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageButton1"
        android:contentDescription="@string/sms"
        android:src="@android:drawable/sym_action_email"
        android:visibility="visible" />

</RelativeLayout>
